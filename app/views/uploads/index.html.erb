<% title 'Uploads' %>

<% for upload in @uploads %>
  <div>
    <%= upload.name %>
    <%= link_to "Edit", edit_upload_path(upload), class: 'btn btn-mini' %>
    <%= link_to "Delete", upload, class: 'btn btn-mini', :method => :delete, confirm: t('confirm.delete', :model_name => 'upload') %>
  </div>
<% end %>
<% if @uploads.empty? %>
  <p>
    There are currently no uploads.
  </p>
<% end %>
<div class="form-actions">
  <%= link_to 'New upload', new_upload_path, :class => 'btn btn-primary' %>
</div>
