<% title 'Uploads' %>

<% for upload in @uploads %>
  <div>
    <%= upload.name %>
    <%= link_to "Edit", edit_upload_path(upload), class: 'btn btn-mini' %>
    <%= link_to "Delete", upload, class: 'btn btn-mini', :method => :delete %>
  </div>
<% end %>
<% if @uploads.empty? %>
  <p>
    There are currently no uploads.
  </p>
<% else %>
  <p>
    <%= link_to "Delete all", uploads_deleteAll_path, :method => :post %>
  </p>
<% end %>
<div class="form-actions">
  <%= link_to 'New upload', new_upload_path, :class => 'btn btn-primary' %>
</div>
